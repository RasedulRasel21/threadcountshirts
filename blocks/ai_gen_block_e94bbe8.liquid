{% doc %}
  @prompt
    <div>
    <img src="https://cdn.shopify.com/s/files/1/0731/2323/3955/files/Design_by_You_Made_by_Threadcount_for_Website_ccf6968f-5d00-43ce-b0cb-d04f1d34ca8a.webp?v=1763664261" style="width: 68%; margin: 0 auto; text-align: center;"></div> make a i=only image section 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-block-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width }}%;
    margin: 0 auto;
    display: block;
  }

  .ai-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-placeholder-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    min-height: 400px;
    display: block;
  }

  .ai-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-image-block-{{ ai_gen_id }} {
      max-width: 100%;
    }
  }
{% endstyle %}

<div class="ai-image-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Image block",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Maximum width",
      "default": 70
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Image block"
    }
  ]
}
{% endschema %}
