  <script>
    (function() {
      const sectionId = '{{ section.id }}';
      const canvasId = 'tshirt-canvas-' + sectionId;

      // Global reference to prevent re-initialization
      if (window['customDesignCanvas_' + sectionId]) {
        console.log('Canvas already initialized for section:', sectionId);
        return;
      }

      // Wait for DOM to be fully loaded
      function initializeCustomDesign() {
        // Get all required elements
        const uploadArea = document.getElementById('uploadArea-' + sectionId);
        const uploadButton = document.getElementById('uploadButton-' + sectionId);
        const fileInput = document.getElementById('tshirt-custompicture-' + sectionId);
        const uploadControls = document.getElementById('uploadControls-' + sectionId);
        const designDataInput = document.getElementById('design-data-' + sectionId);
        const deleteButton = document.getElementById('canvasDelete-' + sectionId);
        const drawingArea = document.getElementById('drawingArea-' + sectionId);

        console.log('Custom Design Init:', {
          uploadArea: !!uploadArea,
          uploadButton: !!uploadButton,
          fileInput: !!fileInput,
          uploadControls: !!uploadControls,
          designDataInput: !!designDataInput,
          deleteButton: !!deleteButton,
          drawingArea: !!drawingArea
        });

        if (!uploadArea || !fileInput || !uploadButton || !drawingArea) {
          console.error('Required elements not found');
          return;
        }

        // Wait for Fabric.js to load
        function initCanvas() {
          if (typeof fabric === 'undefined') {
            setTimeout(initCanvas, 100);
            return;
          }

          console.log('Fabric.js loaded, initializing canvas');

          // Get responsive canvas dimensions
          function getCanvasDimensions() {
            const screenWidth = window.innerWidth;
            if (screenWidth <= 749) {
              // Mobile
              return { width: 175, height: 200, maxWidth: 155, maxHeight: 180 };
            } else if (screenWidth >= 750 && screenWidth <= 1149) {
              // Tablet
              return { width: 200, height: 250, maxWidth: 180, maxHeight: 230 };
            } else {
              // Desktop
              return { width: 300, height: 400, maxWidth: 280, maxHeight: 380 };
            }
          }

          const canvasDims = getCanvasDimensions();

          // Initialize Fabric.js canvas with responsive dimensions
          const canvas = new fabric.Canvas(canvasId, {
            backgroundColor: 'transparent',
            width: canvasDims.width,
            height: canvasDims.height
          });

          // Store canvas globally to prevent re-initialization
          window['customDesignCanvas_' + sectionId] = canvas;

          // Update UI based on canvas state
          function updateCanvasUI() {
            const hasDesign = canvas.getObjects().length > 0;

            if (hasDesign) {
              // Hide upload controls
              if (uploadControls) {
                uploadControls.classList.add('has-design');
              }
              // Show drawing area
              if (drawingArea) {
                drawingArea.classList.add('visible');
              }
              // Show delete button
              if (deleteButton) {
                deleteButton.classList.add('visible');
              }
            } else {
              // Show upload controls
              if (uploadControls) {
                uploadControls.classList.remove('has-design');
              }
              // Hide drawing area
              if (drawingArea) {
                drawingArea.classList.remove('visible');
              }
              // Hide delete button
              if (deleteButton) {
                deleteButton.classList.remove('visible');
              }
            }
          }

          // Save canvas data to hidden input
          function saveCanvasData() {
            try {
              // Get all objects on canvas and extract Shopify URLs
              const canvasObjects = canvas.getObjects();
              const designData = {
                shopifyUrls: [],
                canvasData: canvas.toJSON(['shopifyUrl']) // Include custom shopifyUrl property
              };

              // Extract Shopify URLs from objects
              canvasObjects.forEach((obj) => {
                if (obj.shopifyUrl) {
                  designData.shopifyUrls.push(obj.shopifyUrl);
                }
              });

              // Also include a preview image as base64 for thumbnail purposes
              designData.preview = canvas.toDataURL({
                format: 'png',
                quality: 0.8,
                multiplier: 0.5 // Smaller size for preview
              });

              if (designDataInput) {
                designDataInput.value = JSON.stringify(designData);
              }

              console.log('Saved design data:', {
                shopifyUrls: designData.shopifyUrls,
                objectCount: canvasObjects.length
              });
            } catch (error) {
              console.error('Error saving canvas data:', error);
            }
          }

          // Clear canvas and reset UI
          function clearCanvas() {
            canvas.clear();
            canvas.renderAll();
            updateCanvasUI();
            saveCanvasData();
            console.log('Canvas cleared');
          }

          // Handle file upload and add to canvas
          async function handleFile(file) {
            console.log('Handling file:', file.name, file.type);

            if (!file.type.match('image.*')) {
              alert('Please upload an image file (PNG, JPG, SVG)');
              return;
            }

            // Show upload progress indicator
            const uploadingIndicator = document.createElement('div');
            uploadingIndicator.style.cssText = 'position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: rgba(0,0,0,0.8); color: white; padding: 20px; border-radius: 8px; z-index: 9999;';
            uploadingIndicator.textContent = 'Uploading to Shopify...';
            document.body.appendChild(uploadingIndicator);

            try {
              // Upload file to Shopify via Digital Ocean API
              const uploadUrl = 'https://plankton-app-2f3dz.ondigitalocean.app/upload';

              const formData = new FormData();
              formData.append('file', file);

              console.log('Uploading to Shopify via:', uploadUrl);
              const response = await fetch(uploadUrl, {
                method: 'POST',
                body: formData
              });

              if (!response.ok) {
                throw new Error(`Upload failed: ${response.statusText}`);
              }

              const result = await response.json();
              console.log('Shopify upload response:', result);

              if (!result.success || !result.url) {
                throw new Error(result.error || 'Failed to get file URL from Shopify');
              }

              // Store the Shopify file URL
              const shopifyFileUrl = result.url;
              console.log('File uploaded to Shopify:', shopifyFileUrl);

              // Load image from Shopify URL and add to canvas
              const imgObj = new Image();
              imgObj.crossOrigin = 'anonymous';
              imgObj.src = shopifyFileUrl;

              imgObj.onload = function() {
                const img = new fabric.Image(imgObj);

                // Get current canvas dimensions for responsive scaling
                const currentDims = getCanvasDimensions();
                const scale = Math.min(currentDims.maxWidth / img.width, currentDims.maxHeight / img.height);

                img.scale(scale);
                canvas.centerObject(img);
                canvas.add(img);
                canvas.setActiveObject(img);
                canvas.renderAll();

                // Store Shopify URL in custom data
                img.set('shopifyUrl', shopifyFileUrl);

                // Update UI
                updateCanvasUI();

                // Save canvas data with Shopify URL
                saveCanvasData();

                console.log('Image added to canvas from Shopify URL');

                // Remove upload indicator
                document.body.removeChild(uploadingIndicator);
              };

              imgObj.onerror = function() {
                throw new Error('Failed to load image from Shopify URL');
              };

            } catch (error) {
              console.error('Error uploading file:', error);
              alert('Failed to upload file: ' + error.message);
              document.body.removeChild(uploadingIndicator);
            }
          }

          // Click on button to upload
          uploadButton.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            console.log('Upload button clicked');
            fileInput.click();
          });

          // Click on area to upload
          uploadArea.addEventListener('click', function(e) {
            // Don't trigger if clicking the button
            if (e.target !== uploadButton && !uploadButton.contains(e.target)) {
              console.log('Upload area clicked');
              fileInput.click();
            }
          });

          // Drag and drop events on the upload area
          uploadArea.addEventListener('dragenter', function(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.classList.add('drag-over');
          });

          uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.classList.add('drag-over');
          });

          uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            e.stopPropagation();
            // Only remove if actually leaving the upload area
            if (e.target === uploadArea) {
              uploadArea.classList.remove('drag-over');
            }
          });

          uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.classList.remove('drag-over');

            console.log('File dropped');

            const files = e.dataTransfer.files;
            if (files.length > 0) {
              handleFile(files[0]);
            }
          });

          // File input change event
          fileInput.addEventListener('change', function(e) {
            console.log('File input changed');
            if (e.target.files && e.target.files[0]) {
              handleFile(e.target.files[0]);
              // Reset file input so same file can be selected again
              fileInput.value = '';
            }
          });

          // Delete button click - clear entire canvas
          if (deleteButton) {
            deleteButton.addEventListener('click', function(e) {
              e.preventDefault();
              e.stopPropagation();
              console.log('Delete button clicked');
              clearCanvas();
            });
          }

          // Delete selected object with DEL key
          document.addEventListener('keydown', function(e) {
            if (e.keyCode === 46 || e.key === 'Delete') {
              const activeObject = canvas.getActiveObject();
              if (activeObject) {
                canvas.remove(activeObject);
                canvas.renderAll();

                // Update UI
                updateCanvasUI();

                // Save canvas data
                saveCanvasData();
                console.log('Object deleted from canvas');
              }
            }
          });

          // Update canvas data and UI whenever objects are modified
          canvas.on('object:modified', function() {
            saveCanvasData();
            updateCanvasUI();
          });

          canvas.on('object:added', function() {
            saveCanvasData();
            updateCanvasUI();
          });

          canvas.on('object:removed', function() {
            saveCanvasData();
            updateCanvasUI();
          });

          // Handle variant changes - preserve canvas if needed
          document.addEventListener('variant:change', function() {
            console.log('Variant changed - canvas preserved');
            // Canvas state is maintained automatically
          });

          // Handle window resize to update canvas dimensions
          let resizeTimeout;
          window.addEventListener('resize', function() {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(function() {
              const newDims = getCanvasDimensions();
              canvas.setWidth(newDims.width);
              canvas.setHeight(newDims.height);
              canvas.renderAll();
              console.log('Canvas resized to:', newDims.width, 'x', newDims.height);
            }, 250);
          });

          console.log('Canvas initialized successfully');
        }

        // Start initialization
        initCanvas();
      }

      // Wait for DOM to be ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeCustomDesign);
      } else {
        // DOM is already ready, initialize now
        initializeCustomDesign();
      }
    })();
  </script>
