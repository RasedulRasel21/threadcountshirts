<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const quoteFormId = '{{ quote_form_id }}';

    function initQuoteForm() {
      const fileInput = document.querySelector(`#artwork-upload-${quoteFormId}`);
      const artworkUrlsInput = document.querySelector(`#artwork-urls-${quoteFormId}`);
      const uploadButton = document.querySelector(`[data-upload-button]`);
      const fileDisplay = document.querySelector(`[data-file-display]`);
      const fileName = document.querySelector(`[data-file-name]`);
      const fileRemove = document.querySelector(`[data-file-remove]`);
      const buttonText = document.querySelector(`[data-button-text]`);
      const form = document.querySelector(`#QuoteForm-${quoteFormId}`);
      const submitButton = document.querySelector(`[data-submit-button]`);

      if (!fileInput || !uploadButton) {
        console.error('Required elements not found');
        return;
      }

      let uploadedFileUrls = [];
      let uploadedFileNames = [];

      // Handle file selection
      fileInput.addEventListener('change', async function(e) {
        const files = e.target.files;
        if (files.length === 0) return;

        // Disable upload button during upload
        uploadButton.classList.add('uploading');
        buttonText.textContent = 'Uploading...';

        try {
          // Upload all files
          for (let i = 0; i < files.length; i++) {
            const file = files[i];
            const url = await uploadFileToShopify(file);
            uploadedFileUrls.push(url);
            uploadedFileNames.push(file.name);
          }

          // Update hidden input with URLs
          artworkUrlsInput.value = uploadedFileUrls.join(', ');

          // Update UI
          fileName.textContent = uploadedFileNames.join(', ');
          fileDisplay.classList.add('active');
          buttonText.textContent = uploadedFileUrls.length > 1 ? `${uploadedFileUrls.length} files uploaded` : '1 file uploaded';

        } catch (error) {
          console.error('Upload error:', error);
          alert('Failed to upload file(s): ' + error.message);
          buttonText.textContent = 'UPLOAD FILE(S)';
        } finally {
          uploadButton.classList.remove('uploading');
          fileInput.value = '';
        }
      });

      // Remove uploaded files
      if (fileRemove) {
        fileRemove.addEventListener('click', function() {
          uploadedFileUrls = [];
          uploadedFileNames = [];
          artworkUrlsInput.value = '';
          fileDisplay.classList.remove('active');
          buttonText.textContent = 'UPLOAD FILE(S)';
          fileInput.value = '';
        });
      }

      // Upload file to Shopify
      async function uploadFileToShopify(file) {
        const uploadUrl = 'https://plankton-app-2f3dz.ondigitalocean.app/upload';
        const formData = new FormData();
        formData.append('file', file);

        console.log('Uploading file:', file.name, 'Size:', file.size, 'Type:', file.type);

        try {
          const response = await fetch(uploadUrl, {
            method: 'POST',
            body: formData
          });

          console.log('Response status:', response.status, response.statusText);

          // Try to get response text for better error messages
          const responseText = await response.text();
          console.log('Response text:', responseText);

          if (!response.ok) {
            let errorMessage = `Upload failed (${response.status}): ${response.statusText}`;
            try {
              const errorData = JSON.parse(responseText);
              if (errorData.error) {
                errorMessage = errorData.error;
              }
            } catch (e) {
              // Response is not JSON, use the text
              if (responseText) {
                errorMessage += ' - ' + responseText.substring(0, 100);
              }
            }
            throw new Error(errorMessage);
          }

          // Parse the response
          let result;
          try {
            result = JSON.parse(responseText);
          } catch (e) {
            throw new Error('Invalid response from server: ' + responseText.substring(0, 100));
          }

          if (!result.success || !result.url) {
            throw new Error(result.error || 'Failed to get file URL from Shopify');
          }

          console.log('Upload successful, URL:', result.url);
          return result.url;

        } catch (error) {
          console.error('Upload error details:', error);
          throw error;
        }
      }

      // Prevent form submission if files are still uploading
      if (form && submitButton) {
        form.addEventListener('submit', function(e) {
          if (uploadButton.classList.contains('uploading')) {
            e.preventDefault();
            alert('Please wait for file upload to complete');
            return false;
          }
        });
      }
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initQuoteForm);
    } else {
      initQuoteForm();
    }
  })();
</script>

