<script>
// Slideshow V2 - Embedded JavaScript
(function() {
 if (!customElements.get('slideshow-v2')) {
   class SlideshowV2 extends HTMLElement {
     constructor() {
       super();
       this.currentIndex = 0;
       this.slides = [];
       this.dots = [];
       this.autoplayInterval = null;
     }


     connectedCallback() {
       setTimeout(() => {
         this.init();
       }, 0);


       // Support Shopify theme editor
       if (window.Shopify && window.Shopify.designMode) {
         document.addEventListener('shopify:section:load', (event) => {
           if (event.target.contains(this)) {
             this.resetAndInit();
           }
         });
       }
     }


     init() {
       this.slides = Array.from(this.querySelectorAll('.slide'));
       this.dots = Array.from(this.querySelectorAll('.pagination-dot'));
       this.slidesWrapper = this.querySelector('.slides-wrapper');


       if (this.slides.length === 0) return;


       // Show first slide
       this.showSlide(0);


       // Attach event listeners
       this.attachEventListeners();


       // Start autoplay if enabled
       const autoplayDelay = parseInt(this.dataset.autoplay);
       if (autoplayDelay > 0) {
         this.startAutoplay(autoplayDelay);
       }


       // Pause autoplay on hover
       this.addEventListener('mouseenter', () => this.pauseAutoplay());
       this.addEventListener('mouseleave', () => {
         const autoplayDelay = parseInt(this.dataset.autoplay);
         if (autoplayDelay > 0) {
           this.startAutoplay(autoplayDelay);
         }
       });
     }


     resetAndInit() {
       this.pauseAutoplay();
       this.disconnectedCallback();
       this.init();
     }


     attachEventListeners() {
       this.dots.forEach((dot, index) => {
         dot.addEventListener('click', () => {
           this.goToSlide(index);
         });
       });


       // Keyboard navigation
       this.addEventListener('keydown', (e) => {
         if (e.key === 'ArrowLeft') {
           this.previousSlide();
         } else if (e.key === 'ArrowRight') {
           this.nextSlide();
         }
       });


       // Touch/Swipe support
       let touchStartX = 0;
       let touchEndX = 0;


       this.addEventListener('touchstart', (e) => {
         touchStartX = e.changedTouches[0].screenX;
       });


       this.addEventListener('touchend', (e) => {
         touchEndX = e.changedTouches[0].screenX;
         this.handleSwipe(touchStartX, touchEndX);
       });
     }


     handleSwipe(startX, endX) {
       const swipeThreshold = 50;
       const diff = startX - endX;


       if (Math.abs(diff) > swipeThreshold) {
         if (diff > 0) {
           this.nextSlide();
         } else {
           this.previousSlide();
         }
       }
     }


     showSlide(index) {
       if (index < 0) {
         index = this.slides.length - 1;
       } else if (index >= this.slides.length) {
         index = 0;
       }


       this.currentIndex = index;


       // Update slides
       this.slides.forEach((slide, i) => {
         if (i === index) {
           slide.classList.add('active');
         } else {
           slide.classList.remove('active');
         }
       });


       // Update wrapper transform
       if (this.slidesWrapper) {
         this.slidesWrapper.style.transform = `translateX(-${index * 100}%)`;
       }


       // Update dots
       this.dots.forEach((dot, i) => {
         if (i === index) {
           dot.classList.add('active');
           dot.setAttribute('aria-current', 'true');
         } else {
           dot.classList.remove('active');
           dot.removeAttribute('aria-current');
         }
       });
     }


     goToSlide(index) {
       this.pauseAutoplay();
       this.showSlide(index);


       // Restart autoplay after manual navigation
       const autoplayDelay = parseInt(this.dataset.autoplay);
       if (autoplayDelay > 0) {
         setTimeout(() => {
           this.startAutoplay(autoplayDelay);
         }, 1000);
       }
     }


     nextSlide() {
       this.showSlide(this.currentIndex + 1);
     }


     previousSlide() {
       this.showSlide(this.currentIndex - 1);
     }


     startAutoplay(delay) {
       this.pauseAutoplay();
       this.autoplayInterval = setInterval(() => {
         this.nextSlide();
       }, delay);
     }


     pauseAutoplay() {
       if (this.autoplayInterval) {
         clearInterval(this.autoplayInterval);
         this.autoplayInterval = null;
       }
     }


     disconnectedCallback() {
       this.pauseAutoplay();
     }
   }


   customElements.define('slideshow-v2', SlideshowV2);
 }
})();
</script>


<div class="slideshow-v2 section section-{{ section.id }}{% if section.settings.custom_class != blank %} {{ section.settings.custom_class }}{% endif %}">
 <div class="{% if section.settings.container != 'full' %}page-width{% endif %}">
   <slideshow-v2
     class="slideshow-wrapper slideshow-height-{{ slide_height }}{% if show_text_below %} slideshow-content-mobile-below{% endif %}{% if show_dots %} slideshow-controls-visible-yes controls-position-{{ section.settings.controls_position }}{% endif %}"
     {% if autoplay > 0 %}
       data-autoplay="{{ autoplay }}"
     {% endif %}
     role="region"
     aria-roledescription="Slideshow"
     aria-label="{{ section.settings.accessibility_info | escape }}"
   >
     <div class="slides-container">
       <div class="slides-wrapper">
         {%- for block in section.blocks -%}
           {%- liquid
             assign loading = 'lazy'
             assign fetchpriority = 'low'
             if forloop.index == 1 and section.index < 2
               assign loading = 'eager'
               assign fetchpriority = 'high'
             endif


             assign background_default = block.settings.background
             assign background_mobile = block.settings.background_mobile


             if background_default != blank
               assign aspect_ratio_block = background_default.aspect_ratio
             elsif background_mobile != blank
               assign aspect_ratio_block = background_mobile.aspect_ratio
             else
               assign aspect_ratio_block = aspect_ratio
             endif
           -%}
           <div
             class="slide{% if forloop.first %} active{% endif %}"
             role="group"
             aria-roledescription="Slide"
             aria-label="{{ forloop.index }} of {{ forloop.length }}"
             {{ block.shopify_attributes }}
           >
             <div class="slideshow__item-wrap">
               <div class="slideshow__bg">
                 {%- if background_default == blank and background_mobile == blank -%}
                   {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                   {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                 {%- else -%}
                   {%- if background_mobile != blank -%}
                     <picture>
                       <source
                         media="(max-width: 767px)"
                         srcset="{{ background_mobile | image_url: width: 400 }} 400w, {{ background_mobile | image_url: width: 600 }} 600w, {{ background_mobile | image_url: width: 800 }} 800w"
                       >
                       {%- if background_default != blank -%}
                         {{
                           background_default
                           | image_url: width: 1500
                           | image_tag:
                             loading: loading,
                             fetchpriority: fetchpriority,
                             widths: '600,800,1000,1200,1400,1600,1800,2000,2400,2800,3200'
                         }}
                       {%- else -%}
                         {{
                           background_mobile
                           | image_url: width: 800
                           | image_tag:
                             loading: loading,
                             fetchpriority: fetchpriority
                         }}
                       {%- endif -%}
                     </picture>
                   {%- elsif background_default != blank -%}
                     {{
                       background_default
                       | image_url: width: 1500
                       | image_tag:
                         loading: loading,
                         fetchpriority: fetchpriority,
                         widths: '600,800,1000,1200,1400,1600,1800,2000,2400,2800,3200'
                     }}
                   {%- endif -%}
                 {%- endif -%}
                 {%- if block.settings.image_overlay_opacity > 0 -%}
                   <div
                     class="slideshow__overlay"
                     style="--overlay-opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }}"
                   ></div>
                 {%- endif -%}
               </div>
               <div class="slideshow__content content-overlay-{{ block.settings.content_position_mobile }} content-overlay-{{ block.settings.content_position }} flex flex-col color-{{ block.settings.color_scheme }}">
                 <div class="slideshow__text rich-text text-{{ text_alignment_mobile }} md:text-{{ block.settings.text_alignment }}">
                   {%- unless block.settings.subheading == blank -%}
                     <div class="slideshow__subtitle rich-text__subheading text-subheading block">
                       {{- block.settings.subheading -}}
                     </div>
                   {%- endunless -%}
                   {%- unless block.settings.title == blank -%}
                     <h2 class="slideshow__title {{ block.settings.heading_size }} rich-text__heading block">
                       {{- block.settings.title -}}
                     </h2>
                   {%- endunless -%}
                   {%- unless block.settings.description == blank -%}
                     <div class="block slideshow__description {{ block.settings.description_size }} rich-text__text rte">
                       {{- block.settings.description -}}
                     </div>
                   {%- endunless -%}
                   {%- unless block.settings.button_label == blank -%}
                     <div class="slideshow__buttons rich-text__button block">
                       <a
                         {% if block.settings.button_link != blank %}
                           href="{{ block.settings.button_link }}"
                         {% else %}
                           aria-disabled="true"
                         {% endif %}
                         class="btn {{ block.settings.button_style }}"
                       >
                         {{- block.settings.button_label -}}
                       </a>
                     </div>
                   {%- endunless -%}
                 </div>
               </div>
             </div>
           </div>
         {%- endfor -%}
       </div>
     </div>
     {%- if show_dots and section.blocks.size > 1 -%}
       <div class="slideshow-pagination" role="tablist">
         {%- for block in section.blocks -%}
           <button
             class="pagination-dot{% if forloop.first %} active{% endif %}"
             role="tab"
             aria-label="Go to slide {{ forloop.index }}"
             {% if forloop.first %}aria-current="true"{% endif %}
           ></button>
         {%- endfor -%}
       </div>
     {%- endif -%}
   </slideshow-v2>
 </div>
</div>


